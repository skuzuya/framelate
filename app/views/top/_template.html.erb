<div class="container mx-auto px-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @templates.each do |template| %>
      <div id="template-id-<%= template.id %>" class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-4 flex flex-col h-full">
          <div class="flex justify-between items-center mb-4">
            <h4 class="text-xl font-semibold">
              <%= link_to template.title, '#' %>
            </h4>
            <div class="flex space-x-2">
              <%= link_to '#', id: "button-edit-#{template.id}", class: "text-blue-500 hover:text-blue-700" do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
              <%= link_to '#', id: "button-delete-#{template.id}", method: :delete, data: {confirm: ''}, class: "text-red-500 hover:text-red-700" do %>
                <i class="bi bi-trash-fill"></i>
              <% end %>
            </div>
          </div>
          <ul class="text-gray-600 mb-4">
            <li class="flex items-center"><i class="bi bi-person mr-2"></i><%= template.user.name %></li>
            <li class="flex items-center"><i class="bi bi-calendar mr-2"></i><%= l template.created_at, format: :short %></li>
          </ul>
          <p class="text-gray-800 flex-grow">本文</p>
        </div>
      </div>
    <% end %>
  </div>
</div>