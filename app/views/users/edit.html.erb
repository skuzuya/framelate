<h1 class="text-2xl font-bold mb-4">ユーザー情報編集</h1>
<%= form_with model: @user, local: true, class: "border border-gray-300 rounded p-6", html: { multipart: true } do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :email, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.password_field :password, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.password_field :password_confirmation, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :avatar, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :avatar, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div>
    <%= form.submit "更新", class: "border border-black bg-white text-black rounded px-4 py-2 hover:bg-gray-100 hover:cursor-pointer" %>
  </div>
<% end %>