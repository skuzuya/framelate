<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <article class="card">
        <div class="card-body">
          <div class="flex">
            <div class="w-3/4">
              <h3 class="text-2xl font-bold" style="display: inline;"><%= @template.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@template.user.name}" %></li>
                <li class="list-inline-item"><%= l @template.created_at, format: :long %></li>
              </ul>
              <p class="mt-4 mb-4 text-gray-700"><%= @template.description %></p> <!-- テンプレート説明を追加し、マージンを設定 -->
            </div>
          </div>
          <div class="flex justify-center mt-4">
            <pre class="border border-black p-4 whitespace-pre-wrap w-full max-w-2xl"><%= @template.body %></pre>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>