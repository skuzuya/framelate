<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <article class="card">
        <div class="card-body">
          <div class="flex justify-between items-center">
            <div class="w-3/4">
              <h3 class="text-2xl font-bold" style="display: inline;"><%= @template.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@template.user.name}" %></li>
                <li class="list-inline-item"><%= l @template.created_at, format: :long %></li>
              </ul>
              <pre class="mt-4 mb-4 text-gray-700"><%= @template.description %></pre>
            </div>
            <% if current_user == @template.user %>
              <div class="flex space-x-2">
                <%= link_to '編集', edit_template_path(@template), class: "border border-black bg-white text-black rounded px-4 py-2 hover:bg-gray-100 hover:cursor-pointer" %>
                <%= button_to '削除', template_path(@template), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "border border-red-500 bg-white text-red-500 rounded px-4 py-2 hover:bg-red-100 hover:cursor-pointer" %></pre>
              </div>
            <% end %>
          </div>
          <div class="flex justify-center mt-4">
            <pre class="border border-black p-4 whitespace-pre-wrap w-full max-w-2xl"><%= @template.body %></pre>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>