<head>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<h1 class="text-2xl font-bold mb-4">テンプレート作成</h1>
<%= form_with model: @template, local: true, class: "border border-gray-300 rounded p-6" do |f| %>
  <div class="mb-4">
    <%= f.label 'タイトル', class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :title, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= f.label 'テンプレート説明', class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_area :description, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: "3" %>
  </div>
  <div class="mb-4">
    <%= f.label 'テンプレート本文（mattermostでのtimes投稿用の場合はマークダウン記法でご登録ください）', class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_area :body, class: "mt-1 block w-full border border-black rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500", rows: "10" %>
  </div>
  <div>
    <%= f.submit '投稿', class: "border border-black bg-white text-black rounded px-4 py-2 hover:bg-gray-100 hover:cursor-pointer" %>
  </div>
<% end %>


